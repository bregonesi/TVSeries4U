<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for [@serie, @season, @chapter] do |f| %>
		<%= render "shared/error_messages", object: @chapter %>

		<%= f.label "Chapter name" %>
		<%= f.text_field :name, class: "form-control" %>

		<%= f.label "Chapter number" %>
		<%= f.number_field :number, min: 1, class: "form-control" %>

		<%= f.label "Chapter length (minutes)" %>
		<%= f.number_field :length, min: 1, class: "form-control" %>

		<%= f.label :release %>
		<%= f.date_select :release, {:start_year=>@season.release.year, :end_year=>Time.now.year + 10}, {class: "form-control"} %>

		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>

		<div class="justify-content-between">
  			<div class="col-xs-7">
  				<%= link_to "Return to #{@season.name}", serie_season_path(@serie, @season), class: "btn btn-primary col-xs-12" %>
  			</div>
  			<div class="col-xs-5">
				<%= f.button yield(:submit_text), class: "btn btn-success col-xs-12" %>
			</div>
		</div>
	<% end %>
	</div>
</div>