<div class="row">
	<div class="col-xs-12" id="follow_form">
	  <% if current_user.following_actor?(@actor) %>
	    <%= form_for(current_user.actors_relationship.find_by(actor_id: @actor.id), html: { method: :delete }) do |f| %> 
	      <%= hidden_field_tag :actor_id, @actor.id %>
	      <%= f.submit "Unfollow", class: "btn" %>
	    <% end %>
	  <% else %>
	    <%= form_for(current_user.actors_relationship.build) do |f| %>
	      <%= hidden_field_tag :actor_id, @actor.id %>
	      <%= f.submit "Follow", class: "btn btn-primary" %>
	    <% end %>
	  <% end %>
	</div>
</div>
