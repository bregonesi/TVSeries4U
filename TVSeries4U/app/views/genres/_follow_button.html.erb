<div class="row">
	<div class="col-xs-12" id="follow_form">
	  <% if current_user.following_genre?(@genre) %>
	    <%= form_for(current_user.genres_relationship.find_by(genre_id: @genre.id), html: { method: :delete }) do |f| %> 
	      <%= hidden_field_tag :genre_id, @genre.id %>
	      <%= f.submit "Unfollow", class: "btn" %>
	    <% end %>
	  <% else %>
	    <%= form_for(current_user.genres_relationship.build) do |f| %>
	      <%= hidden_field_tag :genre_id, @genre.id %>
	      <%= f.submit "Follow", class: "btn btn-primary" %>
	    <% end %>
	  <% end %>
	</div>
</div>
